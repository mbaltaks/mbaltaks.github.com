---
title : Feed
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>{{ site.title }}</title>
 <link href="{{ site.production_url }}/atom.xml" rel="self" type="application/atom+xml"/>
 <link href="{{ site.production_url }}" rel="alternate" type="text/html"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <rights>Copyright Â© 2004 - 2014 {{ site.author.name }}</rights>
 <id>{{ site.production_url }}/</id>
 <author>
   <name>{{ site.author.name }}</name>
   <email>{{ site.author.email }}</email>
 </author>

 {% for post in site.posts limit:20 %}
 <entry>
   <title>{{ post.title }}</title>
   {% if post.link %}
   <link rel="alternate" type="text/html" href="{{ post.link | escape }}"/>
   {% else %}
   <link rel="alternate" type="text/html" href="{{ site.production_url }}{{ post.url | remove :'.html' }}"/>
   {% endif %}
   <published>{{ post.date | date_to_xmlschema }}</published>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.production_url }}{{ post.id }}</id>
   <author>
     <name>{{ site.author.name }}</name>
     <uri>{{ site.production_url }}/</uri>
   </author>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}

</feed>
